{
    "Kestrel": {
        "Endpoints": {
            "Http": {
                "Url": "http://0.0.0.0:5000"
            }
        }
    },
    "ConnectionStrings": {
        "DefaultConnection": "Data Source=BookingSystem.db"
    },
    "JwtSettings": {
        "Key": "your-secret-key-that-is-at-least-32-characters-long-for-security",
        "Issuer": "BookingSystem",
        "Audience": "BookingSystemUsers",
        "ExpirationMinutes": 60
    },
    "EmailSettings": {
        "SmtpServer": "smtp.gmail.com",
        "SmtpPort": 587,
        "SenderEmail": "noreply@bookingsystem.fi",
        "SenderPassword": "your-app-password",
        "EnableSsl": true
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.EntityFrameworkCore": "Warning"
        }
    },
    "AllowedHosts": "*"
}